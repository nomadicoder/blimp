<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Map Filename</th>
      <th>Datafile URL</th>
      <th>Datafile Directory</th>
      <th>Datafile Name</th>
      <th>Id field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.map_filename %></td>
        <td><%= document.datafile.url %></td>
        <td><%= File.dirname(document.datafile.current_path.to_s) %></td>
        <td><%= File.basename(document.datafile.current_path.to_s) %></td>
        <td><%= document.id_field %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

